{
    "manifest_version": 2,
    "name": "tiktok-container",
    "version": "2.0.0",

    "description": "TikTok Container isolates your TikTok activity from the rest of your web activity in order to prevent ByteDance from tracking you outside of the TikTok ecosystem via third party cookies.",

    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },

    "applications": {
      "gecko": {
        "id": "@tiktok-container",
        "strict_min_version": "67.0"
      }
    },

    "homepage_url": "https://github.com/lolrepeatlol/tiktok-container",

    "permissions": [
        "<all_urls>",
        "browsingData",
        "contextualIdentities",
        "cookies",
        "management",
        "storage",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
